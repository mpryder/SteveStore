<h1>Listing products</h1>

<%= form_tag products_path, :method => 'get' do %>
  <p>
  	<%= text_field_tag :search, params[:search] %> 
  	<%= submit_tag "Search by Name", :name => nil %>
  	
  </p>
<% end %>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Make</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
  	<td><%= link_to (image_tag product.image_url_url.to_s, :style => "height:75px" ), product %></td>
    <td><%= product.name %></td>
    <td><%= product.make %></td>
    <td><%= number_to_currency(product.price, :unit => "â‚¬") %></td>
    <td><a href="/cart/<%= product.id %>">Add to Cart</a></td>
    <% if user_signed_in? %>
    <% if current_user.admin? %> 
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }%></td>
    <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<p><%= will_paginate @products %></p>

<br />
<% if user_signed_in? %>
<% if current_user.admin? %> 
<%= link_to 'New Product', new_product_path %>
<% end %>
<% end %>
